# Maintainer: StoneCold <forumi0721[at]gmail[dot]com>

pkgname=("bash-completion-btrfs")
pkgver=0.1
pkgrel=2
pkgdesc="Programmable completion for the bash shell (btrfs)"
arch=("any")
license=("GPL")
depends=("bash" "bash-completion" "btrfs-progs")
source=("${pkgname}.tar.xz")
md5sums=("a714659618dbe798fed8986b3abd889a")

package() {
	install -dm755 "${pkgdir}/usr/share/bash-completion/completions/"
	install -Dm644 "${srcdir}/${pkgname}/btrfs" "${pkgdir}/usr/share/bash-completion/completions/"
}
