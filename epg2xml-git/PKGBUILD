# Maintainer: StoneCold <forumi0721[at]gmail[dot]com>

pkgname=("epg2xml-git")
_gitname="epg2xml"
pkgver=20151002.26.838b84f
pkgrel=1
pkgdesc="epg2xml"
arch=("any")
url="http://www.epg.co.kr/"
license=("custom")
depends=("wget")
backup=("var/lib/epg2xml/tvchannel.conf")
install="${pkgname}.install"
source=("${_gitname}::git+https://github.com/forumi0721/epg2xml.git")
md5sums=("SKIP")

pkgver() {
	cd "${srcdir}/${_gitname}"
	echo "$(git log -1 --format="%cd" --date=short | sed "s/-//g").$(git rev-list --count HEAD).$(git rev-parse --short HEAD)"
}

package() {
	install -dm755 "${pkgdir}/usr/lib/systemd/system"
	install -Dm644 "${srcdir}/${_gitname}/epg2xml.service" "${pkgdir}/usr/lib/systemd/system/"
	install -Dm644 "${srcdir}/${_gitname}/epg2xml.timer" "${pkgdir}/usr/lib/systemd/system/"

	install -dm755 "${pkgdir}/usr/bin"
	install -Dm755 "${srcdir}/${_gitname}/tv_grab_epg2xml" "${pkgdir}/usr/bin/"

	install -dm755 "${pkgdir}/var/lib/epg2xml"
	install -Dm755 "${srcdir}/${_gitname}/epg2xml" "${pkgdir}/var/lib/epg2xml/"
	install -Dm644 "${srcdir}/${_gitname}/tvchannel.conf" "${pkgdir}/var/lib/epg2xml/"
	install -Dm644 "${srcdir}/${_gitname}/tvchannel.list" "${pkgdir}/var/lib/epg2xml/"
	install -Dm644 "${srcdir}/${_gitname}/tvchannel.u+.conf" "${pkgdir}/var/lib/epg2xml/"
}

