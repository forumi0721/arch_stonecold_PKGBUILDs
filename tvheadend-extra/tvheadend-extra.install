post_install() {
	echo "To use the mc2xml service, please run the following command:"
	echo " # systemctl enable mc2xml.timer"
}

post_upgrade() {
	if [ -e /etc/systemd/system/multi-user.target.wants/mc2xml.timer ]; then
		systemctl daemon-reload
	fi
}

post_remove() {
	rm -rf /etc/systemd/system/multi-user.target.wants/mc2xml.timer
}
