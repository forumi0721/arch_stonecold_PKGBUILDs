# Maintainer: StoneCold <forumi0721[at]gmail[dot]com>

pkgname=("scepg-wget")
pkgver=0.1
pkgrel=1
pkgdesc="scepg-wget"
arch=("any")
url="http://forumi0721.ddns.net/"
license=("custom")
depends=("wget")
provides=("scepg-git" "epg2xml-git" "epg2xml-wget")
conflicts=("scepg-git" "epg2xml-git" "epg2xml-wget")
install="${pkgname}.install"
source=(
	"scepg-wget.service"
	"scepg-wget.timer"
	"tv_grab_scepg"
	"scepg-wget"
)
md5sums=(
	"SKIP"
	"SKIP"
	"SKIP"
	"SKIP"
)

package() {
	install -dm755 "${pkgdir}/usr/lib/systemd/system"
	install -Dm644 "${srcdir}/${_gitname}/scepg-wget.service" "${pkgdir}/usr/lib/systemd/system/"
	install -Dm644 "${srcdir}/${_gitname}/scepg-wget.timer" "${pkgdir}/usr/lib/systemd/system/"

	install -dm755 "${pkgdir}/usr/bin"
	install -Dm755 "${srcdir}/${_gitname}/tv_grab_scepg" "${pkgdir}/usr/bin/"

	install -dm755 "${pkgdir}/var/lib/scepg"
	install -Dm755 "${srcdir}/${_gitname}/scepg-wget" "${pkgdir}/var/lib/scepg/"
}

