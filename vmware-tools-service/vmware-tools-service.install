post_install() {
	echo "To use the vmware-tools service, please run the following command:"
	echo " # systemctl enable vmware-tools-service.service"
}

post_upgrade() {
	if [ -e /etc/systemd/system/multi-user.target.wants/vmware-tools-service.service ]; then
		systemctl daemon-reload
	fi
}

post_remove() {
	rm -rf /etc/systemd/system/multi-user.target.wants/vmware-tools-service.service
}
